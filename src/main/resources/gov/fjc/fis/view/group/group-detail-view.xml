<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      title="msg://groupDetailView.title"
      focusComponent="form">
    <data>
        <instance id="groupDc"
                  class="gov.fjc.fis.entity.Group">
            <fetchPlan extends="_base">
                <property name="division" fetchPlan="_base">
                    <property name="activities" fetchPlan="_base">
                        <property name="branch" fetchPlan="_base">
                            <property name="titleAndCode"/>
                        </property>
                    </property>
                </property>
            </fetchPlan>
            <loader/>
        </instance>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
    </facets>
    <actions>
        <action id="saveAction" type="detail_saveClose"/>
        <action id="closeAction" type="detail_close"/>
    </actions>
    <layout>
        <formLayout id="form" dataContainer="groupDc">
            <entityPicker id="divisionField" property="division">
                <actions>
                    <action id="entityLookup" type="entity_lookup"/>
                    <action id="entityClear" type="entity_clear"/>
                </actions>
            </entityPicker>
            <textField id="groupCodeField" property="groupCode"/>
            <textField id="titleField" property="title"/>
            <textField id="sortCodeField" property="sortCode"/>
        </formLayout>
        <hbox id="detailActions">
            <button id="saveAndCloseBtn" action="saveAction"/>
            <button id="closeBtn" action="closeAction"/>
        </hbox>
    </layout>
</view>
